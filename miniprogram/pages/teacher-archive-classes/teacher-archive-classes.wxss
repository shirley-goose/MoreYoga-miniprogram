/* 老师已结课程页面样式 */
@import "../teacher-classes/teacher-classes.wxss";

/* 已结课程特殊样式 */
.course-item.archived {
  opacity: 0.85;
  border-left: 4px solid #28a745;
}

.group-course-item.archived {
  opacity: 0.85;
  border-left: 4px solid #28a745;
}

.course-status.completed {
  background: #28a745;
  color: white;
}

.course-status.cancelled {
  background: #dc3545;
  color: white;
}

.completed-text {
  color: #28a745;
  font-weight: 600;
}

/* 取消时间样式 */
.cancel-time {
  margin-top: 8rpx;
  font-size: 24rpx;
}

.cancel-label {
  color: #666;
  font-weight: 500;
}

.cancel-text {
  color: #dc3545;
  font-weight: 600;
}

.completion-time {
  margin-top: 10rpx;
  padding: 8rpx 12rpx;
  background: #f8f9fa;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.completion-label {
  color: #666;
  margin-right: 8rpx;
}

.completion-text {
  color: #333;
  font-weight: 500;
}

/* 空状态样式优化 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

/* 列表头部样式 */
.list-header {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  margin: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.header-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 26rpx;
  color: #666;
}

/* 统计信息样式 */
.stats-info {
  display: flex;
  gap: 10rpx;
  margin-top: 10rpx;
  flex-wrap: wrap;
}

.stat-item {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  background: rgba(108, 117, 125, 0.1);
  color: #6c757d;
}

/* 统计项目不同状态的样式 */
.stat-item.total {
  background: rgba(23, 162, 184, 0.1);
  color: #17a2b8;
  font-weight: 600;
}

.stat-item.completed {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.stat-item.cancelled {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

.stat-item.failed {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
}

/* 预约计数样式 */
.booking-count.completed {
  background: rgba(76, 175, 80, 0.1);
  border-color: rgba(76, 175, 80, 0.3);
}

.booking-count.completed .count-number {
  color: #4caf50;
}

/* 预约状态样式 */
.booking-status {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.booking-status.done {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
  border: 1px solid rgba(40, 167, 69, 0.2);
}

.booking-status.cancelled {
  background: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

.booking-status.fail {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
  border: 1px solid rgba(255, 193, 7, 0.2);
}

.booking-status.waitlist {
  background: rgba(23, 162, 184, 0.1);
  color: #17a2b8;
  border: 1px solid rgba(23, 162, 184, 0.2);
}

/* 取消时间样式 */
.cancel-time {
  font-size: 20rpx;
  color: #dc3545;
  margin-top: 4rpx;
  padding: 2rpx 6rpx;
  background: rgba(220, 53, 69, 0.05);
  border-radius: 6rpx;
}

/* 学员信息样式 */
.student-name {
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}
