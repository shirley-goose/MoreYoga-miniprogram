.container {
  padding: 40rpx 20rpx;
  padding-top: 225rpx; /* 导航栏高度185rpx + 额外间距40rpx */
  min-height: 100vh;
  padding-bottom: 200rpx; /* 为底部按钮留出空间 */
}

/* 页面标题 */
.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000;
  letter-spacing: 10%;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
}

/* 课程信息卡片 */
.course-card {
  background: #777C80;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 2rpx 2rpx 4rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 老师信息 */
.teacher-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.teacher-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.teacher-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
}

/* 课程详情 */
.course-details {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.course-title {
  font-size: 48rpx;
  font-weight: 500;
  color: #fff;
  flex: 1;
  text-align: left;
}

.course-info-right {
  text-align: right;
  flex-shrink: 0;
}

.course-date {
  font-size: 22rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 6rpx;
}

.course-time {
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
}

/* 分割线 */
.divider {
  width: 100%;
  height: 1rpx;
  background: #fff;
  margin: 20rpx 0;
}

/* 费用信息 */
.cost-info {
  color: #fff;
}

.cost-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
}

.cost-label {
  font-size: 24rpx;
  font-weight: 400;
  color: #DEDEDE;
}

.cost-value {
  font-size: 24rpx;
  font-weight: 400;
  color: #fff;
}

.total-cost {
  text-align: right;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  margin-top: 20rpx;
  padding-right: 20rpx;
}

/* 信息区域 */
.info-section {
  background: #DADADA;
  border-radius: 12rpx;
  padding: 40rpx;
  box-shadow: 2rpx 2rpx 4rpx 2rpx rgba(0, 0, 0, 0.2);
}

.booking-progress {
  margin-bottom: 30rpx;
}

.course-intro {
  margin-bottom: 30rpx;
}

.booking-notice {
  margin-bottom: 0;
}

.info-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
  display: block;
  margin-bottom: 10rpx;
}

.progress-text {
  font-size: 24rpx;
  font-weight: 400;
  color: #000;
}

.info-content {
  font-size: 24rpx;
  font-weight: 400;
  color: #000;
  line-height: 1.4em;
  display: block;
}

.notice-list {
  margin-top: 10rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.notice-number {
  font-size: 24rpx;
  font-weight: 500;
  color: #000;
  flex-shrink: 0;
  width: 30rpx;
}

.notice-text {
  font-size: 24rpx;
  font-weight: 400;
  color: #000;
  line-height: 1.4em;
  flex: 1;
}

/* 底部确认按钮 */
.bottom-action {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #777C80;
  padding: 20rpx 0;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.confirm-btn {
  margin: 0 auto;
  padding: 20rpx 60rpx;
  text-align: center;
}

.confirm-btn-text {
  font-size: 40rpx;
  font-weight: 400;
  color: #fff;
  letter-spacing: 20%;
}