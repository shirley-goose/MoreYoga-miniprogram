.container {
  padding: 40rpx 24rpx;
  padding-top: 225rpx; /* 导航栏高度185rpx + 额外间距40rpx */
  min-height: 100vh;
  padding-bottom: 200rpx; /* 为底部TabBar留出空间 */
}

/* 课程类型切换 */
.type-switch {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  border: None;
  padding: 20rpx;
}

.type-item {
  font-size: 40rpx;
  font-weight: 500;
  color: #7C7C7C;
  padding: 0 20rpx;
  letter-spacing: 10%;
  transition: all 0.3s ease;
}

.type-item.active {
  color: #000;
  font-weight: 600;
}

.type-divider {
  font-size: 24rpx;
  color: #A6A5A8;
  margin: 0 5rpx;
}

/* 团课内容 */
.group-course-content {
  width: 100%;
}

/* 周日历 */
.week-calendar {
  display: flex;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.calendar-item {
  flex: 1;
  text-align: center;
  padding: 10rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.calendar-item.selected {
  background: rgba(217, 217, 217, 0.7);
}


.week-name {
  font-size: 20rpx;
  color: #000;
  font-weight: 400;
  margin-bottom: 8rpx;
}

.calendar-item.selected .week-name {
  font-weight: 600;
}

.date-number {
  font-size: 18rpx;
  color: #000;
  font-weight: 400;
}

.calendar-item.selected .date-number {
  font-weight: 600;
}

/* 当日课程列表 */
.daily-courses {
  width: 100%;
}

.no-courses {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.course-list {
  width: 100%;
}

.course-card {
  background: #F8FCFF;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 2rpx 2rpx 4rpx 2rpx rgba(0, 0, 0, 0.2);
}

.course-content {
  display: flex;
  align-items: flex-start;
  width: 100%;
}

/* 老师部分 */
.teacher-section {
  flex: 0 0 88rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 20rpx;
}

.teacher-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
  box-shadow: 1rpx 1rpx 4rpx 1rpx rgba(0, 0, 0, 0.25);
  margin-bottom: 8rpx;
}

.teacher-name {
  font-size: 24rpx;
  color: #000;
  font-weight: 400;
  text-align: center;
  letter-spacing: 10%;
  width: 100%;
  margin-top: 10rpx;
}

/* 课程信息部分 */
.course-info {
  flex: 1;
  margin-right: 20rpx;
}

.course-title {
  font-size: 40rpx;
  color: #000;
  font-weight: 400;
  margin-bottom: 12rpx;
  margin-left: 16rpx;
}

.course-desc {
  font-size: 16rpx;
  color: #7C7C7C;
  line-height: 1.4em;
  margin-bottom: 8rpx;
  margin-left: 16rpx;
}

.course-capacity {
  font-size: 20rpx;
  color: #000;
  letter-spacing: 5%;
  line-height: 1.4em;
  margin-left: 16rpx;
  margin-top: 12rpx;
}

/* 时间和预约部分 */
.time-booking {
  flex: 0 0 120rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.course-time {
  font-size: 40rpx;
  color: #000;
  font-weight: 600;
  letter-spacing: 5%;
  margin-bottom: 4rpx;
  margin-right: 20rpx;
}

.end-time {
  font-size: 16rpx;
  color: #50555C;
  letter-spacing: 20%;
  margin-bottom: 16rpx;
  margin-right: 20rpx;
}

.booking-btn {
  display: flex;
  justify-content: center;
  align-items: center; /* 水平 + 垂直居中 */
  height: 10rpx;        /* 缩小整体高度 */
  padding: 0 16rpx;
  height: 45rpx;
  border-radius: 5rpx;
  box-shadow: 2rpx 2rpx 4rpx 0rpx rgba(0, 0, 0, 0.25);
  min-width: 60rpx;
  margin-right: 20rpx;
}


.booking-btn.available {
  background: rgba(99, 94, 70, 0.2);
}

.booking-btn.full {
  background: rgba(99, 94, 70, 0.2);
}

.booking-btn.booked {
  background: rgba(76, 175, 80, 0.3);
}

.booking-btn.ended {
  background: rgba(189, 189, 189, 0.5);
  opacity: 0.6;
}

.booking-btn text {
  font-size: 18rpx;
  color: #000;
  font-weight: 600;
  letter-spacing: 10%;
}

/* 私教内容 */
.private-course-content {
  width: 100%;
}

.private-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.teacher-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
}

.teacher-card {
  width: 300rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.teacher-avatar-container {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.teacher-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.avatar-placeholder-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.placeholder-text {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

.teacher-card .teacher-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.teacher-intro {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.4em;
}

.book-private-btn {
  background: #f0f0f0;
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.book-private-btn:active {
  transform: scale(0.95);
  background: #e0e0e0;
}

.book-private-btn .btn-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}

/* 训练营内容 */
.camp-content {
  width: 100%;
}

.camp-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.camp-list {
  width: 100%;
}

.camp-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.camp-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  margin-right: 30rpx;
}

.camp-info {
  flex: 1;
  margin-right: 20rpx;
}

.camp-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.camp-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4em;
}

.camp-duration {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.camp-price {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b35;
}

.camp-action-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx 30rpx;
  border-radius: 25rpx;
  font-size: 24rpx;
  font-weight: 600;
  white-space: nowrap;
}

/* 私教预约步骤样式 */
.private-step-1,
.private-step-2 {
  width: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: left;
}

.daily-private-teachers {
  margin-top: 40rpx;
}

.no-teachers {
  text-align: center;
  padding: 60rpx 30rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.no-teachers-text {
  font-size: 28rpx;
  color: #999;
}

/* 私教预约步骤2样式 */
.step-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
}

.back-to-teachers {
  display: flex;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.back-to-teachers:active {
  transform: scale(0.95);
}

.back-icon {
  font-size: 32rpx;
  color: #666;
  margin-right: 10rpx;
}

.back-text {
  font-size: 28rpx;
  color: #666;
}

.step-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 时间段选择样式 */
.time-slots-section {
  margin-bottom: 40rpx;
}

.section-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.time-instruction {
  font-size: 22rpx;
  color: #868e96;
  font-weight: 400;
}

.time-slots-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 20rpx;
}

.time-slot {
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
  min-width: 150rpx;
  text-align: center;
}

.time-slot:active {
  transform: scale(0.95);
}

.time-slot.selected {
  background: #6c757d;
  border-color: #5a6268;
}

.slot-text {
  font-size: 26rpx;
  color: #000;
  font-weight: 500;
}

.time-slot.selected .slot-text {
  color: #fff;
  font-weight: 600;
}

/* 时间段状态样式 */
.time-slot.expired {
  background: rgba(189, 189, 189, 0.5);
  opacity: 0.6;
  cursor: not-allowed;
}

.time-slot.booked {
  background: rgba(255, 193, 7, 0.3);
  border-color: #ffc107;
  cursor: not-allowed;
}

.time-slot.expired .slot-text,
.time-slot.booked .slot-text {
  color: #666;
}

.slot-status {
  display: block;
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
  font-weight: 400;
}

.time-slot.expired .slot-status {
  color: #999;
}

.time-slot.booked .slot-status {
  color: #856404;
}

/* 确认预约按钮 */
.confirm-private-booking {
  background: #6c757d;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx auto 0;
  box-shadow: 0 8rpx 25rpx rgba(108, 117, 125, 0.3);
  transition: all 0.3s ease;
  max-width: 400rpx;
}

.confirm-private-booking:active {
  transform: scale(0.95);
  background: #5a6268;
}

.confirm-btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}