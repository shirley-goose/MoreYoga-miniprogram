<!-- 师资简介列表页面 -->
<!-- 背景图 -->
<image class="global-bg" src="../../images/background.png" mode="aspectFill"/>

<!-- 自定义导航栏 -->
<view class="nav-bar">
  <view class="nav-left">
    <!-- 返回键 -->
    <view class="back-btn" bindtap="goBack">
      <view class="back-icon">←</view>
    </view>
  </view>
  <view class="nav-title">墨瑜伽</view>
  <view class="nav-right"></view>
</view>

<view class="page-container">
  <view class="container">
    
    <!-- 页面标题 -->
    <view class="page-title">师资简介</view>

    <!-- 老师列表 -->
    <view class="teachers-list">
      <view 
        wx:for="{{teachersList}}" 
        wx:key="id" 
        class="teacher-card"
        bindtap="goToTeacherDetail"
        data-teacher-id="{{item.id}}"
      >
        <view class="teacher-avatar">
          <image 
            wx:if="{{item.avatar}}" 
            class="avatar-image" 
            src="{{item.avatar}}" 
            mode="aspectFill"
          />
          <view wx:else class="avatar-placeholder">
            <text class="placeholder-text">照片待补充</text>
          </view>
        </view>
        <view class="teacher-info">
          <view class="teacher-name">{{item.name}}</view>
        </view>
      </view>
    </view>

  </view>
</view>
