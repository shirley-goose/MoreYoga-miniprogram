/* 页面容器 */
.container {
  padding: 30rpx;
  padding-top: 200rpx; /* 导航栏高度 + 间距 */
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #868e96;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #868e96;
}

/* 列表头部 */
.list-header {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  border: 1px solid #e9ecef;
}

.header-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 24rpx;
  color: #868e96;
}

/* 课程项 */
.course-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  border: 1px solid #e9ecef;
  overflow: hidden;
}

/* 课程信息 */
.course-info {
  padding: 30rpx;
  position: relative;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #495057;
  flex: 1;
}

.booking-count {
  display: flex;
  align-items: baseline;
  background: #f8f9fa;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1px solid #dee2e6;
}

.count-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #495057;
  margin-right: 4rpx;
}

.count-label {
  font-size: 22rpx;
  color: #6c757d;
}

/* 课程详情 */
.course-details {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  border: 1px solid #e9ecef;
}

.detail-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

.detail-text {
  font-size: 22rpx;
  color: #6c757d;
}

/* 展开图标 */
.expand-icon {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #868e96;
}

.expand-text {
  margin-right: 6rpx;
}

.expand-arrow {
  font-size: 18rpx;
  transition: transform 0.3s ease;
}

/* 预约列表 */
.booking-list {
  border-top: 1px solid #e9ecef;
  background: #f8f9fa;
  padding: 30rpx;
}

.no-bookings {
  text-align: center;
  padding: 40rpx;
}

.no-bookings-text {
  font-size: 24rpx;
  color: #868e96;
}

.students-header {
  font-size: 26rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 20rpx;
}

/* 学员项 */
.student-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 20rpx;
  margin-bottom: 12rpx;
  border-radius: 12rpx;
  border: 1px solid #dee2e6;
}

.student-item:last-child {
  margin-bottom: 0;
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #495057;
  margin-bottom: 4rpx;
}

.student-phone {
  font-size: 22rpx;
  color: #6c757d;
}

/* 预约状态 */
.booking-status {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.booking-status.confirmed {
  background: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.booking-status.booked {
  background: #d1ecf1;
  color: #0c5460;
  border: 1px solid #bee5eb;
}

.booking-status.pending {
  background: #fff3cd;
  color: #856404;
  border: 1px solid #ffeaa7;
}

.booking-status.cancelled {
  background: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}
