/* 页面容器 */
.container {
  padding: 30rpx;
  padding-top: 200rpx; /* 导航栏高度 + 间距 */
  min-height: 100vh;
}

/* 选项卡布局 */
.tab-layout {
  min-height: calc(100vh - 200rpx);
}

/* 选项卡头部 */
.tab-header {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.tab-item {
  flex: 1;
  padding: 24rpx 20rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
  border-bottom: 4rpx solid transparent;
  background: rgba(248, 249, 250, 0.5);
}

.tab-item:first-child {
  border-radius: 16rpx 0 0 16rpx;
}

.tab-item:last-child {
  border-radius: 0 16rpx 16rpx 0;
}

.tab-item.active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.15), rgba(118, 174, 76, 0.15));
  border-bottom-color: #667eea;
  box-shadow: inset 0 -4rpx 0 #667eea;
}

.tab-item:hover {
  background: rgba(102, 126, 234, 0.05);
}

.tab-text {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 4rpx;
}

.tab-item.active .tab-text {
  color: #667eea;
}

.tab-count {
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  color: #667eea;
  margin-bottom: 4rpx;
}

.tab-desc {
  display: block;
  font-size: 20rpx;
  color: #6c757d;
  line-height: 1.2;
}

/* 选项卡内容 */
.tab-content {
  min-height: 500rpx;
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #868e96;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #868e96;
}

/* 列表头部 */
.list-header {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  border: 1px solid #e9ecef;
}

.header-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 8rpx;
}

.header-desc {
  font-size: 24rpx;
  color: #868e96;
}

/* 课程项 */
.course-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  border: 1px solid #e9ecef;
  overflow: hidden;
}

/* 课程信息 */
.course-info {
  padding: 30rpx;
  position: relative;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #495057;
  flex: 1;
}

.booking-count {
  display: flex;
  align-items: baseline;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1px solid #dee2e6;
}

.booking-count.upcoming {
  background: rgba(102, 126, 234, 0.1);
  border-color: rgba(102, 126, 234, 0.3);
}

.booking-count.upcoming .count-number {
  color: #667eea;
}

.booking-count.completed {
  background: rgba(76, 175, 80, 0.1);
  border-color: rgba(76, 175, 80, 0.3);
}

.booking-count.completed .count-number {
  color: #4caf50;
}

.count-number {
  font-size: 28rpx;
  font-weight: 700;
  color: #495057;
  margin-right: 4rpx;
}

.count-label {
  font-size: 22rpx;
  color: #6c757d;
}

/* 课程详情 */
.course-details {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  border: 1px solid #e9ecef;
}

.detail-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

.detail-text {
  font-size: 22rpx;
  color: #6c757d;
}

/* 展开图标 */
.expand-icon {
  position: absolute;
  right: 30rpx;
  bottom: 20rpx;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #868e96;
}

.expand-text {
  margin-right: 6rpx;
}

.expand-arrow {
  font-size: 18rpx;
  transition: transform 0.3s ease;
}

/* 预约列表 */
.booking-list {
  border-top: 1px solid #e9ecef;
  background: #f8f9fa;
  padding: 30rpx;
}

.no-bookings {
  text-align: center;
  padding: 40rpx;
}

.no-bookings-text {
  font-size: 24rpx;
  color: #868e96;
}

.students-header {
  font-size: 26rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 20rpx;
}

/* 学员项 */
.student-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 20rpx;
  margin-bottom: 12rpx;
  border-radius: 12rpx;
  border: 1px solid #dee2e6;
}

.student-item:last-child {
  margin-bottom: 0;
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #495057;
  margin-bottom: 4rpx;
}

.student-phone {
  font-size: 22rpx;
  color: #6c757d;
}

/* 预约状态 */
.booking-status {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.booking-status.confirmed {
  background: #d4edda;
  color: #155724;
  border: 1px solid #c3e6cb;
}

.booking-status.booked {
  background: #d1ecf1;
  color: #0c5460;
  border: 1px solid #bee5eb;
}

.booking-status.pending {
  background: #fff3cd;
  color: #856404;
  border: 1px solid #ffeaa7;
}

.booking-status.cancelled {
  background: #f8d7da;
  color: #721c24;
  border: 1px solid #f5c6cb;
}

.booking-status.done {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
  border: 1px solid rgba(40, 167, 69, 0.2);
}

.booking-status.fail {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
  border: 1px solid rgba(255, 193, 7, 0.2);
}

.booking-status.waitlist {
  background: rgba(23, 162, 184, 0.1);
  color: #17a2b8;
  border: 1px solid rgba(23, 162, 184, 0.2);
}

/* 统计信息 */
.stats-info {
  display: flex;
  gap: 10rpx;
  margin-top: 10rpx;
  flex-wrap: wrap;
}

.stat-item {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  background: rgba(108, 117, 125, 0.1);
  color: #6c757d;
}

/* 统计项目不同状态的样式 */
.stat-item.total {
  background: rgba(23, 162, 184, 0.1);
  color: #17a2b8;
  font-weight: 600;
}

.stat-item.completed {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.stat-item.cancelled {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

.stat-item.failed {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
}

/* 取消时间 */
.cancel-time {
  font-size: 20rpx;
  color: #dc3545;
  margin-top: 4rpx;
  padding: 2rpx 6rpx;
  background: rgba(220, 53, 69, 0.05);
  border-radius: 6rpx;
}

/* 加载已完成课程区域 */
.load-completed-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.load-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.tip-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  opacity: 0.8;
}

.tip-text {
  font-size: 28rpx;
  color: #868e96;
  text-align: center;
  line-height: 1.5;
}

.load-completed-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
  min-width: 300rpx;
}

.load-completed-btn:hover {
  box-shadow: 0 12rpx 30rpx rgba(102, 126, 234, 0.4);
  transform: translateY(-2rpx);
}

.load-completed-btn.loading {
  background: linear-gradient(135deg, #bbb 0%, #999 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transform: none;
}

.load-completed-btn[disabled] {
  opacity: 0.6;
  pointer-events: none;
}
