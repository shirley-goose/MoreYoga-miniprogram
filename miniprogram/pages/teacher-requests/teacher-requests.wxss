/* 全局背景样式 */
.global-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 导航栏样式 */
.nav-bar {
  height: 100rpx;
  padding-top: 60rpx;
  padding-bottom: 25rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  background: #202632;
  color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.nav-left, .nav-right {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.nav-right {
  justify-content: flex-end;
}

.nav-center {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.back-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}

.back-icon {
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

/* 页面容器 */
.container {
  padding-top: 225rpx;
  padding-bottom: 40rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  min-height: 100vh;
}

/* 状态切换标签 */
.status-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
}

.tab-item {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #6c757d;
}

.tab-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  transition: color 0.3s ease;
}

.tab-item.active .tab-text {
  color: #fff;
  font-weight: 600;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 20rpx;
  background: #dc3545;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
  min-width: 20rpx;
  text-align: center;
}

/* 申请列表 */
.requests-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.request-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease;
  position: relative;
}

/* 申请类型标签 - 右上角 */
.request-type-badge {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  padding: 8rpx 15rpx;
  border-radius: 15rpx;
  font-size: 20rpx;
  font-weight: 600;
  background: rgba(76, 175, 80, 0.1);
  color: #4caf50;
  border: 1rpx solid rgba(76, 175, 80, 0.3);
  z-index: 2;
}

.request-type-badge .cancel-type {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
  border: 1rpx solid rgba(255, 152, 0, 0.3);
}

.request-item:active {
  transform: scale(0.98);
}

.request-item.processed {
  opacity: 0.8;
}

/* 申请头部 */
.request-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
  padding-right: 120rpx; /* 为右上角类型标签留出空间 */
}

.student-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.student-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.student-phone {
  font-size: 24rpx;
  color: #666;
}

.request-time {
  font-size: 22rpx;
  color: #999;
}

/* 状态标识 */
.status-badge {
  position: absolute;
  bottom: 15rpx;
  right: 15rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  z-index: 1;
}

.status-badge.confirmed {
  background: rgba(76, 175, 80, 0.1);
  color: #4caf50;
  border: 1rpx solid rgba(76, 175, 80, 0.3);
}

.status-badge.rejected {
  background: rgba(244, 67, 54, 0.1);
  color: #f44336;
  border: 1rpx solid rgba(244, 67, 54, 0.3);
}

.status-badge.cancelled {
  background: rgba(158, 158, 158, 0.1);
  color: #9e9e9e;
  border: 1rpx solid rgba(158, 158, 158, 0.3);
}

/* 申请详情 */
.request-details {
  margin-bottom: 25rpx;
}

.detail-row {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
}

.detail-label {
  font-size: 26rpx;
  color: #666;
  width: 140rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 操作按钮 */
.request-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.reject-btn {
  background: #f8f9fa;
  color: #6c757d;
  border: 2rpx solid #dee2e6;
}

.reject-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.confirm-btn {
  background: #6c757d;
  color: #fff;
}

.confirm-btn:active {
  background: #5a6268;
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
