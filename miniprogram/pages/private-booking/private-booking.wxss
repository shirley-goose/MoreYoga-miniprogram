/* 私教预约页面样式 */

/* 页面整体样式 */
.page-container {
  background: transparent; /* 让背景图片显示 */
  padding-bottom: 160rpx; /* 适配自定义TabBar */
  padding-top: 185rpx; /* 适配固定导航栏 */
  min-height: 100vh;
  position: relative;
}

.container {
  min-height: 100vh;
  position: relative;
  padding: 0 30rpx;
}

/* 导航栏样式 */
.nav-bar {
  height: 100rpx;
  padding-top: 60rpx;
  padding-bottom: 25rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  background: #202632;
  color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.nav-left {
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  align-self: flex-end;
}

.nav-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
}

/* 返回键样式 */
.back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(217, 217, 217, 0);
  border-radius: 50rpx;
  width: 108rpx;
  height: 58rpx;
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(217, 217, 217, 0.2);
  transform: scale(0.95);
}

.back-icon {
  font-size: 36rpx;
  color: #fff;
  font-weight: 300;
}

/* 页面标题 */
.page-title {
  font-size: 72rpx;
  font-weight: 500;
  color: #000;
  letter-spacing: 0.1em;
  text-align: left;
  margin: 40rpx 0 60rpx 0;
  line-height: 1.2;
}

/* 周日历样式 */
.week-calendar {
  display: flex;
  justify-content: space-between;
  margin: 40rpx 0 60rpx 0;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.calendar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 15rpx;
  border-radius: 15rpx;
  min-width: 80rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.calendar-item:active {
  transform: scale(0.95);
}

.calendar-item.selected {
  background: rgba(217, 217, 217, 0.7);
}

.week-name {
  font-size: 20rpx;
  color: #000;
  font-weight: 400;
  margin-bottom: 10rpx;
}

.date-number {
  font-size: 26rpx;
  font-weight: 500;
  color: #000;
}

/* 当日老师区域样式 */
.daily-teachers-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #000;
  margin-bottom: 30rpx;
  text-align: left;
}

.available-teachers-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.no-teachers {
  text-align: center;
  padding: 60rpx 30rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
}

.no-teachers-text {
  font-size: 28rpx;
  color: #999;
}

.teacher-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.teacher-card .teacher-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.teacher-card .teacher-info .teacher-name {
  margin-bottom: 0;
  margin-right: 20rpx;
}

.teacher-card .booking-btn {
  flex-shrink: 0;
}

.teacher-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
}

/* 老师头像区域 */
.teacher-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin-right: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 15rpx;
}

.placeholder-text {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

/* 老师信息区域 */
.teacher-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-right: 20rpx;
}

.teacher-name {
  font-size: 48rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 10%;
  line-height: 1.4;
  margin-bottom: 10rpx;
}

.available-times {
  margin-bottom: 15rpx;
}

.time-text {
  font-size: 24rpx;
  color: #666;
}

/* 预约按钮 */
.booking-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  border-radius: 50rpx;
  width: 120rpx;
  height: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.booking-btn:active {
  transform: scale(0.95);
  background: #e0e0e0;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

/* 预约须知样式 */
.notes-section {
  margin-top: 60rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.notes-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000;
  margin-bottom: 20rpx;
}

.notes-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.notes-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .page-title {
    font-size: 56rpx;
  }
  
  .teacher-name {
    font-size: 40rpx;
  }
  
  .teacher-avatar {
    width: 100rpx;
    height: 100rpx;
  }
  
  .booking-btn {
    width: 100rpx;
    height: 50rpx;
  }
  
  .btn-text {
    font-size: 24rpx;
  }
}