/* 场馆介绍页面样式 */
page {
  background: #f5f5f5;
}

.container {
  min-height: 100vh;
  position: relative;
  padding-top: 185rpx; /* 为固定导航栏留出空间 */
}

/* 内容区域 */
.content-section {
  padding: 40rpx 24rpx 160rpx 24rpx;
}

.page-title {
  font-size: 72rpx;
  font-weight: 500;
  color: #000;
  margin-bottom: 40rpx;
  letter-spacing: 0.1em;
}

.content-item {
  margin-bottom: 60rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 400;
  color: #000;
  margin-bottom: 20rpx;
}

.placeholder-content {
  padding: 20rpx;
  min-height: 200rpx;
  background: rgba(217, 217, 217, 0.3);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-placeholder {
  width: 100%;
  height: 200rpx;
  background: rgba(217, 217, 217, 0.5);
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-text {
  font-size: 28rpx;
  color: #888;
  text-align: center;
}
