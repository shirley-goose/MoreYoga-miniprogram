page {
  background: #f5f5f5;
}

/* logo在左上角20%处 */
.logo-wrap {
  position: absolute;
  left: 6%;
  top: 19%;
  width: 47%;
  z-index: 1;
}

.logo {
  width: 100%;
  height: auto;
}


/* 中文slogan图片居中，宽度80% */
.chinese-slogan-wrap {
  position: absolute;
  left: 15%;
  top: 39%;
  width: 70%;
  display: flex;
  justify-content: center;
  z-index: 1;
}

.chinese-slogan-img {
  width: 100%;
  height: auto;
}

/* 介绍模块区（无底色，横版排布） */
.intro-section {
  position: absolute;
  left: 0;
  right: 0;
  top: 63%;
  padding: 0 40rpx;
  z-index: 1;
}

.intro-grid {
  display: flex;
  justify-content: space-between;
  gap: 8rpx;
}

.intro-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
}

.intro-icon {
  width: 110rpx;
  height: 110rpx;
  margin-bottom: 12rpx;
}

.intro-title {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  text-align: center;
}