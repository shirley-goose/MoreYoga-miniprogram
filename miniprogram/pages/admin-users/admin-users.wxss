.container {
  padding: 40rpx;
  padding-top: 225rpx; /* 导航栏高度185rpx + 额外间距40rpx */
  min-height: 100vh;
}

.search-container {
  display: flex;
  margin-bottom: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 10rpx;
  padding: 20rpx;
}

.search-input {
  flex: 1;
  padding: 35rpx 20rpx; /* 增加高度 */
  border: 2rpx solid #e5e5e5;
  border-radius: 10rpx;
  font-size: 32rpx; /* 增加字体大小 */
  margin-right: 20rpx;
  min-height: 100rpx; /* 设置最小高度 */
}

.search-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  border: none;
}

.user-list {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  overflow: hidden;
}

.loading, .no-data {
  text-align: center;
  padding: 80rpx;
  color: #666;
  font-size: 28rpx;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-item:last-child {
  border-bottom: none;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  overflow: hidden;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.default-avatar {
  font-size: 32rpx;
  color: #666;
  font-weight: 600;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.user-phone {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.user-credits {
  font-size: 24rpx;
  color: #667eea;
  font-weight: 500;
}

.user-actions {
  padding: 20rpx;
}

.edit-icon {
  font-size: 32rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.selected-user {
  background: #f8f9fa;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
}

.selected-user .user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.current-credits {
  font-size: 24rpx;
  color: #666;
}

.edit-form {
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 25rpx;
}

.form-group.half {
  width: 48%;
}

.form-row {
  display: flex;
  justify-content: space-between;
}

.form-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.form-input, .form-picker {
  width: 100%;
  padding: 35rpx 20rpx; /* 增加高度 */
  border: 2rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 32rpx; /* 增加字体大小 */
  color: #333;
  box-sizing: border-box;
  min-height: 100rpx; /* 设置最小高度 */
}

.form-picker {
  color: #666;
  background: #fafafa;
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
}

.cancel-btn, .confirm-btn {
  width: 48%;
  padding: 25rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.cancel-btn {
  background: #f0f0f0;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.confirm-btn:disabled {
  background: #ccc;
}
