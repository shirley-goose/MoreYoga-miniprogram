/* 全局背景样式 */
.global-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 导航栏样式 */
.nav-bar {
  height: 100rpx;
  padding-top: 60rpx;
  padding-bottom: 25rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  background: #202632;
  color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.nav-left, .nav-right {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.nav-right {
  justify-content: flex-end;
}

.nav-center {
  flex: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.back-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}

.back-icon {
  font-size: 20rpx;
  color: #fff;
  font-weight: 600;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

/* 页面容器 */
.container {
  padding-top: 225rpx;
  padding-bottom: 40rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  min-height: 100vh;
}

/* 历史记录列表 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: #F8FCFF;
  border-radius: 12px;
  padding: 30rpx;
  box-shadow: 2px 2px 4px 2px rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  position: relative;
}

.course-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  margin-right: 25rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.course-info {
  flex: 1;
}

.course-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.teacher-name {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.course-time {
  font-size: 24rpx;
  color: #7C7C7C;
  line-height: 1.5;
}

.cancel-time {
  font-size: 22rpx;
  color: #ff6b6b;
  margin-top: 6rpx;
  line-height: 1.4;
  font-weight: 500;
}

.course-content {
  font-size: 22rpx;
  color: #888;
  margin-top: 8rpx;
  line-height: 1.4;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 状态标签 - 右上角 */
.course-status-top {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.status-btn {
  padding: 12rpx 25rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.completed-btn {
  background: rgba(76, 175, 80, 0.1);
  color: #4caf50;
  border: 1rpx solid rgba(76, 175, 80, 0.3);
}

.cancelled-btn {
  background: rgba(158, 158, 158, 0.1);
  color: #9e9e9e;
  border: 1rpx solid rgba(158, 158, 158, 0.3);
}

.rejected-btn {
  background: rgba(244, 67, 54, 0.1);
  color: #f44336;
  border: 1rpx solid rgba(244, 67, 54, 0.3);
}

.pending-btn {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
  border: 1rpx solid rgba(255, 193, 7, 0.3);
}

.cancel-pending-btn {
  background: rgba(255, 152, 0, 0.1);
  color: #ff9800;
  border: 1rpx solid rgba(255, 152, 0, 0.3);
}

.confirmed-btn {
  background: rgba(33, 150, 243, 0.1);
  color: #2196f3;
  border: 1rpx solid rgba(33, 150, 243, 0.3);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin: 60rpx 0;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #bbb;
}
