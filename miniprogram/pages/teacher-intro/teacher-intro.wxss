/* 师资介绍页面样式 */

/* 页面整体样式 */
.page-container {
  background: transparent; /* 让背景图片显示 */
  padding-bottom: 160rpx; /* 适配自定义TabBar */
  padding-top: 160rpx; /* 适配固定导航栏 */
  min-height: 100vh;
  position: relative;
}

.container {
  min-height: 100vh;
  position: relative;
  padding: 0 30rpx;
}

/* 导航栏样式 - 与app.wxss保持一致 */
.nav-bar {
  height: 100rpx;
  padding-top: 60rpx;
  padding-bottom: 25rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  background: #202632;
  color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.nav-left {
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  align-self: flex-end;
}

.nav-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
}

/* 返回键样式 */
.back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(217, 217, 217, 0);
  border-radius: 50rpx;
  width: 108rpx;
  height: 58rpx;
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(217, 217, 217, 0.2);
  transform: scale(0.95);
}

.back-icon {
  font-size: 36rpx;
  color: #fff;
  font-weight: 300;
}

/* 右侧区域样式 */
.nav-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
}

/* 老师头像和姓名区域 */
.teacher-header {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 80rpx;
  margin-bottom: 60rpx;
}

.teacher-photo {
  width: 302rpx;
  height: 402rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 30rpx;
  align-self: flex-end;
  margin-right: 30rpx;
}

.teacher-name {
  font-size: 80rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 10%;
  text-align: center;
  line-height: 1.4;
  margin-left: 0;
  align-self: flex-start;
}

/* 通用版块样式 */
.course-section,
.awards-section {
  margin-bottom: 60rpx;
  position: relative;
}

.section-divider {
  width: 100%;
  height: 4rpx;
  background: #D9D9D9;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 10%;
  text-align: right;
  line-height: 0.9;
  margin-bottom: 30rpx;
  margin-right: 15rpx;
}

/* 擅长课程样式 */
.course-content {
  padding-left: 20rpx;
}

.course-item {
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.course-category {
  font-size: 24rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 10%;
}

.course-description {
  font-size: 24rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 10%;
}

/* 奖项与证书样式 */
.awards-content {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.awards-column {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.award-item {
  font-size: 22rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 10%;
  line-height: 1.4;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .teacher-photo {
    width: 250rpx;
    height: 335rpx;
  }
  
  .teacher-name {
    font-size: 60rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
}