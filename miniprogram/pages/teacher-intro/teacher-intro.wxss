/* 师资介绍页面样式 */

/* 页面整体样式 */
.page-container {
  background: transparent; /* 让背景图片显示 */
  padding-bottom: 160rpx; /* 适配自定义TabBar */
  padding-top: 160rpx; /* 适配固定导航栏 */
  min-height: 100vh;
  position: relative;
}

.container {
  min-height: 100vh;
  position: relative;
  padding: 0 30rpx;
}

/* 导航栏样式 - 与app.wxss保持一致 */
.nav-bar {
  height: 100rpx;
  padding-top: 60rpx;
  padding-bottom: 25rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  background: #202632;
  color: #fff;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
}

.nav-left {
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  align-self: flex-end;
}

.nav-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
}

/* 返回键样式 */
.back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(217, 217, 217, 0);
  border-radius: 50rpx;
  width: 108rpx;
  height: 58rpx;
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(217, 217, 217, 0.2);
  transform: scale(0.95);
}

.back-icon {
  font-size: 36rpx;
  color: #fff;
  font-weight: 300;
}

/* 右侧区域样式 */
.nav-right {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 30rpx;
}

/* 老师头像和姓名区域 */
.teacher-header {
  display: flex;
  flex-direction: row;      /* 水平排列 */
  align-items: center;      /* 居中对齐 */
  margin-bottom: 60rpx;
  padding-left: 10rpx;      /* 左侧内边距 */
  padding-right: 10rpx;     /* 右侧内边距 */
}

.teacher-info {
  flex: 1;
  max-width: 300rpx;
  margin-right: 25rpx;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;   /* 占满宽度，方便控制内部对齐 */
  word-wrap: break-word;
}

.teacher-name {
  margin-top: 140rpx;
  font-size: 60rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 10%;
  text-align: center;
  line-height: 1.4;
}

.teacher-subtitle {
  font-size: 22rpx;       /* 小字 */
  color: #999999;         /* 灰色 */
  line-height: 1.4;
  margin-top: 20rpx;      /* 姓名和小字间距 */
  margin-bottom: 20rpx;
  /* text-indent: 20rpx;  首行缩进两个字符 */
}

.teacher-photo {
  width: 300rpx;
  height: 400rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  margin-top: 100rpx;
  margin-left: 0rpx;
}


/* 通用版块样式 */
.course-section,
.words-section {
  margin-bottom: 40rpx;
  position: relative;
  padding-left: 10rpx;      /* 左侧内边距 */
  padding-right: 10rpx;     /* 右侧内边距 */
}

.section-divider {
  width: 100%;
  height: 4rpx;
  background: #D9D9D9;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 10%;
  text-align: right;
  line-height: 0.9;
  margin-bottom: 30rpx;
  margin-right: 15rpx;
  padding-left: 10rpx;      /* 左侧内边距 */
  padding-right: 10rpx;     /* 右侧内边距 */
}

/* 老师的话样式 */
.teacher-words {
  font-size: 22rpx;
  line-height: 1.5;
  color: #999999;
  /* text-indent: 20rpx; */
  padding-left: 30rpx;      /* 左侧内边距 */
  padding-right: 30rpx;     /* 右侧内边距 */
}

/* 关于课程样式 */
.course-content {
  padding-left: 20rpx;
  margin-top: 20rpx;
}

.course-item {
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.course-category {
  font-size: 26rpx;
  font-weight: 400;
  color: #000;
  letter-spacing: 10%;
  margin-bottom: 8rpx;
}

.course-description {
  font-size: 22rpx;
  font-weight: 400;
  color: #000;
  padding-left: 10rpx;      /* 左侧内边距 */
  padding-right: 20rpx;     /* 右侧内边距 */
  color: #999999;
}


/* 响应式适配 */
@media screen and (max-width: 375px) {
  .teacher-photo {
    width: 250rpx;
    height: 335rpx;
  }
  
  .teacher-name {
    font-size: 60rpx;
  }
  
  .section-title {
    font-size: 32rpx;
  }
}